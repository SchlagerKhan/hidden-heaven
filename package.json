{
    "name": "hidden-heaven",
    "module": "index.ts",
    "type": "module",
    "bin": {
        "hidden-heaven": "./dist/index.cli.cjs"
    },
    "scripts": {
        "build": "tsup-node --dts",
        "dev": "npm run build -- --watch",
        "dev:types": "tsc --watch",
        "test": "vitest"
    },
    "tsup": {
        "entry": [
            "src/index.ts",
            "src/index.cli.ts"
        ],
        "splitting": false,
        "sourcemap": true,
        "clean": true
    },
    "devDependencies": {
        "tsup": "^8.3.5",
        "prettier": "^3.4.2",
        "vitest": "^3.0.2",
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "fast-glob": "*"
    }
}
