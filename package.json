{
    "name": "hidden-heaven",
    "module": "index.ts",
    "type": "module",
    "bin": {
        "hidden-heaven": "./dist/index.cli.cjs"
    },
    "scripts": {
        "build": "tsup-node --dts",
        "--DEV--": "",
        "dev": "npm run build -- --watch",
        "dev:types": "tsc --watch",
        "--TEST--": "",
        "test": "vitest",
        "test:fixture:basic": "(cd src.test/fixtures/fixture.basic && npm run test)",
        "test:fixture:named": "(cd src.test/fixtures/fixture.named && npm run test)",
        "test:fixture:config": "(cd src.test/fixtures/fixture.config && npm run test)",
        "test:fixture:init": "(cd src.test/fixtures/fixture.init && npm run test)"
    },
    "tsup": {
        "entry": [
            "src/index.ts",
            "src/index.cli.ts"
        ],
        "splitting": false,
        "sourcemap": true,
        "clean": true
    },
    "devDependencies": {
        "@types/minimist": "^1.2.5",
        "prettier": "^3.4.2",
        "tsup": "^8.3.5",
        "typescript": "^5.0.0",
        "vitest": "^3.0.2",
        "@types/fs-extra": "^11.0.4"
    },
    "dependencies": {
        "fast-glob": "*",
        "minimist": "^1.2.8",
        "fs-extra": "^11.3.0"
    }
}
