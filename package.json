{
    "name": "hidden-heaven",
    "module": "index.ts",
    "type": "module",
    "bin": {
        "hidden-heaven": "./dist/index.cli.cjs"
    },
    "scripts": {
        "build": "tsup-node --dts",
        "--DEV--": "",
        "dev": "npm run build -- --watch",
        "dev:types": "tsc --watch",
        "--TEST--": "",
        "test": "vitest",
        "test:fixture:basic": "(cd src.test/fixtures/basic && npm run hide)",
        "test:fixture:named": "(cd src.test/fixtures/named && npm run hide)"
    },
    "tsup": {
        "entry": [
            "src/index.ts",
            "src/index.cli.ts"
        ],
        "splitting": false,
        "sourcemap": true,
        "clean": true
    },
    "devDependencies": {
        "@types/minimist": "^1.2.5",
        "prettier": "^3.4.2",
        "tsup": "^8.3.5",
        "typescript": "^5.0.0",
        "vitest": "^3.0.2"
    },
    "dependencies": {
        "fast-glob": "*",
        "minimist": "^1.2.8"
    }
}
